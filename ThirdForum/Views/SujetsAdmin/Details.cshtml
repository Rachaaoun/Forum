@model ThirdForum.Models.Sujet

@{
    ViewData["Title"] = "Details";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="../../Back/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../../Back/assets/img/favicon.png">
    <title>
        Soft UI Dashboard by Creative Tim
    </title>
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <!-- Nucleo Icons -->
    <link href="../../Back/assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="../../Back/assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <link href="../../Back/assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link id="pagestyle" href="../../Back/assets/css/soft-ui-dashboard.css?v=1.0.7" rel="stylesheet" />
</head>

<h1>Details</h1>

<div>
    <h4>Sujet</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Subject Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomSujet)
        </dd>
        <dt class = "col-sm-2">
           Photo
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.Photo)"  width="50px"/>
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            Theme
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Theme.NomTheme)
        </dd>
    </dl>
</div>
<div>
           <div style="margin-bottom:15px;float: inline-end;">
                <a class="btn btn-secondary btn-sm" role="button" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> 
       <a class="btn btn-primary btn-sm" role="button" asp-action="Index">Back to List</a>
</div>
